{
  "manifest_version": 3,
  "name": "NoDistract",
  "version": "1.1",
  "description": "Hide YouTube Categories and Channels for a distraction-free experience",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}